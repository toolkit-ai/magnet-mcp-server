{
  "name": "@magnet-ai/magnet-mcp-server",
  "version": "0.5.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsc && node dist/index.js",
    "build": "tsc",
    "start": "node dist/index.js",
    "prepare": "husky",
    "mcp-config": "bash scripts/mcp-config.sh",
    "lint": "eslint .",
    "lint:fix": "prettier --write . && eslint --fix .",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "scripts-help": {
    "mcp-config": "Generates MCP client configuration for local testing. Run 'pnpm build' first, then 'pnpm mcp-config' to get config snippets to paste into your MCP client (Claude Desktop, Claude Code, or Cursor)."
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@tiptap/react": "^2.1.13",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "~8.50.0",
    "@typescript-eslint/parser": "~8.50.0",
    "concurrently": "~9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "~9.1.2",
    "eslint-import-resolver-typescript": "~3.7.0",
    "eslint-plugin-import": "~2.31.0",
    "eslint-plugin-prettier": "~5.2.6",
    "globals": "^16.5.0",
    "husky": "~9.1.7",
    "lint-staged": "~15.5.2",
    "prettier": "~3.3.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=22.2.0"
  },
  "volta": {
    "node": "22.2.0"
  },
  "bin": {
    "magnet-mcp-server": "dist/index.js"
  }
}
